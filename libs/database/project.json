{
  "name": "database",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/database/src",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/database/jest.config.ts"
      }
    },
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/database",
        "tsConfig": "libs/database/tsconfig.lib.json",
        "packageJson": "libs/database/package.json",
        "main": "libs/database/src/index.ts",
        "assets": [
          "libs/database/README.md",
          {
            "glob": "**/*.prisma",
            "input": "libs/database/prisma",
            "output": "prisma"
          }
        ]
      }
    },
    "prisma-generate": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/database",
        "command": "npx prisma generate"
      }
    },
    "prisma-migrate": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/database",
        "command": "npx prisma migrate dev"
      }
    },
    "prisma-studio": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/database",
        "command": "npx prisma studio"
      }
    }
  },
  "tags": []
}
