  "scripts": {
    "buld:all": "nx run-many --target=build --all",
    "build:auth": "node scripts/build-lib.js",
    "build:auth:nx": "nx build auth",
    "build:auth:manual": "node scripts/build-auth.js",
    "start:backend": "nx run backend:serve",
    "start:frontend": "nx run frontend:dev",
    "start:site": "nx dev site:dev",
    "start:all": "npm-run-all --parallel start:backend start:frontend start:site",
    "install:simple": "npm install --no-package-lock",
    "libs:build": "nx build shared-models && npm run build:auth:manual",
    "prestart": "npm run libs:build",
    "clean": "rm -rf node_modules && rm -rf dist",
    "fix:auth": "npm run build:auth:manual",
    "seed": "npx ts-node libs/database/prisma/seed.ts",
    "build:models": "nx build shared-models",
    "fix:imports": "node scripts/fix-imports.js",
    "rebuild:libs": "rm -rf dist/libs && npm run build:models && npm run build:auth:manual",
    "build:site": "npm run setup:tailwind && nx build site",
    "standardize:imports": "npm run fix:imports && npm run libs:build",
    "update:dependencies": "npm install glob --save-dev"
  },
